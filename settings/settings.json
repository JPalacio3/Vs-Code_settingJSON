{
	// Configuraciones de sugerencias y autocompletado
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.suggest.insertMode": "insert",
	"editor.acceptSuggestionOnCommitCharacter": true,
	"editor.tabCompletion": "on",
	"editor.scrollbar.vertical": "auto",
	"editor.wordBasedSuggestions": "off",
	// Configuración del panel lateral
	"workbench.sideBar.location": "right",
	"workbench.iconTheme": "vscode-icons",
	"workbench.productIconTheme": "bootstrap-product-icons",
	// Configuraciones de fuente
	"editor.fontFamily": "Dank Mono SemiBold",
	"editor.fontWeight": 400,
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	// Configuraciones de guardado de archivos
	"files.autoSave": "onFocusChange",
	"files.autoSaveDelay": 100,
	"files.insertFinalNewline": true,
	// Configuraciones de guías de indentación
	"editor.guides.indentation": true,
	"editor.guides.bracketPairs": true,
	"editor.guides.bracketPairsHorizontal": false,
	"editor.guides.highlightActiveIndentation": true,
	// Configuraciones de formato
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnType": true,
	"prettier.bracketSameLine": true,
	"prettier.endOfLine": "auto",
	"prettier.insertPragma": true,
	"prettier.proseWrap": "always",
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	// Configuración del área de trabajo
	"window.title": "${activeFolderShort} // ${activeEditorShort}",
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.openPositioning": "last",
	"workbench.editor.wrapTabs": true,
	"workbench.editor.centeredLayoutFixedWidth": true,
	// Configuración de comentarios
	"better-comments.multilineComments": true,
	"better-comments.highlightPlainText": true,
	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#FF2D50",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "?",
			"color": "#3498DB",
			"strikethrough": false,
			"underline": false,
			"true": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "//",
			"color": "#474747",
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "let",
			"color": "#eeff00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": ".",
			"color": "#ffffff",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": ",",
			"color": "#FFFFFF",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "*",
			"color": "#98C379",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		},
		{
			"tag": "return",
			"color": "#ff0000",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": true,
			"italic": false
		}
	],
	// Configuración de navegación con breadcrumbs
	"breadcrumbs.enabled": true,
	"breadcrumbs.icons": false,
	"breadcrumbs.filePath": "on",
	"breadcrumbs.symbolPath": "off",
	"workbench.colorCustomizations": {
		"breadcrumb.foreground": "#00a6ff",
		"breadcrumbPicker.background": "#000000",
		"breadcrumb.activeSelectionForeground": "#ffbf00",
		"breadcrumb.focusForeground": "#ffbf00",
		"breadcrumb.background": "#061b33",
		"tab.activeForeground": "#00ff7b",
		"tab.inactiveForeground": "#04ff00cb",
		"tab.activeBackground": "#101760",
		"tab.inactiveBackground": "#0c0534",
		"statusBar.background": "#061b33",
		"statusBar.foreground": "#00a6ff",
		"statusBarItem.hoverBackground": "#081b2f",
		"statusBarItem.prominentForeground": "#ffffff",
		"statusBarItem.errorForeground": "#ff0000",
		"statusBarItem.hoverForeground": "#ffbf00",
		"activityBar.foreground": "#00a6ff",
		"activityBarBadge.background": "#206122",
		"activityBarBadge.foreground": "#fff201",
		"menu.foreground": "#00b4fb",
		"menu.background": "#01102c",
		"menu.selectionForeground": "#ffbf00",
		"menu.selectionBackground": "#0d153f",
		"sideBar.foreground": "#8abcf1",
		"list.errorForeground": "#cb4f4f",
		"list.focusForeground": "#01ff34",
		"list.activeSelectionForeground": "#01ff34",
		"list.hoverForeground": "#ffcc00",
		"list.highlightForeground": "#01ff34",
		"list.hoverBackground": "#03134d",
		"list.activeSelectionBackground": "#0d153f",
		"list.inactiveSelectionBackground": "#0e0847",
		"list.inactiveSelectionForeground": "#02ff13",
		"gitDecoration.modifiedResourceForeground": "#ffaa00",
		"gitDecoration.ignoredResourceForeground": "#2d80cd",
		"menu.border": "#ffcc00",
		"banner.foreground": "#01ff34",
		"foreground": "#00a6ff",
		"input.foreground": "#7bb8d4",
		"menubar.selectionForeground": "#ffaa00c0",
		"menu.separatorBackground": "#ffcc009b",
		"menubar.selectionBackground": "#101760",
		"menubar.hoverForeground": "#ff0000",
		"menubar.hoverBackground": "#00ff00",
		"titleBar.activeForeground": "#00a6ff",
		"titleBar.inactiveForeground": "#0084ff",
	},
	"explorer.decorations.colors": true,
	"explorer.decorations.badges": true,
	// Configuración de resaltado de código
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "punctuation.definition.string.begin",
				"settings": {
					"foreground": "#ffffff",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation.definition.string.end",
				"settings": {
					"foreground": "#ffffff",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "keyword.operator",
				"settings": {
					"foreground": "#ff0000",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "keyword.operator.assignment",
				"settings": {
					"foreground": "#ff7300",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation.separator.colon",
				"settings": {
					"foreground": "#ff6600",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation.terminator.statement",
				"settings": {
					"foreground": "#ffff00",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation.separator.continuation",
				"settings": {
					"foreground": "#ffa200",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation",
				"settings": {
					"foreground": "#ffffff",
					"fontStyle": "bold"
				}
			},
			{
				"scope": [
					"keyword.other.new",
					"keyword.other",
					"keyword.control",
					"entity.name.function",
					"support.function"
				],
				"settings": {
					"foreground": "#00ffea",
					// "fontStyle": ""
				}
			},
			{
				"scope": [
					"variable"
				],
				"settings": {
					"foreground": "#03ff03",
					"fontStyle": ""
				}
			},
			{
				"scope": [
					"keyword.other.special-method",
					"keyword"
				],
				"settings": {
					"foreground": "#2fff00",
					"fontStyle": "bold"
				}
			},
			{
				"scope": [
					"comment",
					"comment.block.documentation"
				],
				"settings": {
					"foreground": "#75a8d7ad",
					"fontStyle": "italic "
				}
			},
			{
				"scope": "keyword",
				"settings": {
					"fontStyle": ""
				}
			},
			{
				"scope": "variable.language",
				"settings": {
					"foreground": "#ff7301cd",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "punctuation.definition.parenthesis",
				"settings": {
					"foreground": "#00ff1e",
					// "fontStyle": "bold"
				}
			}
		]
	},
	// Configuraciones de comportamiento del cursor
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorWidth": 2,
	"editor.overviewRulerBorder": false,
	"editor.hideCursorInOverviewRuler": true,
	// Configuración de acciones de código
	"editor.codeActionsOnSave": {
		"source.organizeImports": "always"
	},
	"editor.codeActionWidget.includeNearbyQuickFixes": false,
	// Configuraciones de cierre automático
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingDelete": "always",
	"editor.autoIndent": "full",
	// Configuraciones de plegado de código
	"editor.showFoldingControls": "always",
	"editor.glyphMargin": true,
	"editor.folding": true,
	"editor.foldingHighlight": true,
	// Configuraciones de parejas de corchetes
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.matchBrackets": "always",
	// Configuración de segmentación de palabras
	"editor.wordSegmenterLocales": "es-MX",
	// Configuraciones de edición vinculada y cierre de etiquetas
	"editor.linkedEditing": true,
	// Configuraciones adicionales
	"editor.inlineSuggest.enabled": true,
	"editor.scrollBeyondLastLine": false,
	"editor.wordWrapColumn": 80,
	"editor.wordWrap": "on",
	"editor.multiCursorPaste": "full",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.defaultColorDecorators": false,
	// Configuración de edición de JSON y PHP
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[php]": {
		"editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
	},
	"[blade]": {
		"editor.defaultFormatter": "shufo.vscode-blade-formatter"
	},
	// Configuraciones de Python
	"pythonIndent.keepHangingBracketOnLine": true,
	"pythonIndent.useTabOnHangingIndent": true,
	"pythonIndent.trimLinesWithOnlyWhitespace": true,
	// Configuraciones de JavaScript y TypeScript
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	// Configuraciones del terminal integrado
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.tabs.defaultIcon": "file-directory",
	// Configuración de seguridad
	"security.workspace.trust.untrustedFiles": "open",
	// Otras configuraciones
	"editor.experimentalWhitespaceRendering": "font",
	"notebook.defaultFormatter": "esbenp.prettier-vscode",
	"notebook.output.minimalErrorRendering": true,
	"html.format.templating": true,
	"explorer.confirmDelete": false,
	"workbench.layoutControl.type": "toggles",
	"workbench.settings.applyToAllProfiles": [
		"editor.fontFamily"
	],
	"css.format.spaceAroundSelectorSeparator": true,
	"less.format.spaceAroundSelectorSeparator": true,
	"scss.format.spaceAroundSelectorSeparator": true,
	"files.trimTrailingWhitespace": true,
	"editor.minimap.renderCharacters": false,
	"editor.minimap.enabled": false,
	"workbench.colorTheme": "Platzi Theme Green Mode",
	"workbench.preferredDarkColorTheme": "Platzi Theme Green Mode",
	"workbench.preferredHighContrastColorTheme": "Platzi Theme Green Mode",
	"workbench.preferredHighContrastLightColorTheme": "Platzi Theme Green Mode",
	"workbench.preferredLightColorTheme": "Platzi Theme Green Mode",
	"window.systemColorTheme": "dark",
	"terminal.integrated.tabs.defaultColor": "terminal.ansiBlack",
	"terminal.integrated.fontFamily": "Azeret Mono",
	"terminal.integrated.fontWeight": "bold",
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorWidth": 2,
	"terminal.integrated.accessibleViewPreserveCursorPosition": true,
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"git.showProgress": false,
	"git.suggestSmartCommit": false,
	"git.untrackedChanges": "hidden",
	"git.confirmSync": false,
	"git.confirmEmptyCommits": false,
	"workbench.cloudChanges.autoResume": "off",
	"workbench.experimental.cloudChanges.autoStore": "onShutdown",
	"git.openRepositoryInParentFolders": "always",
	"files.exclude": {
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false
	},
	"search.useParentIgnoreFiles": true,
	"search.useIgnoreFiles": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/dist": true
	},
	"window.dialogStyle": "custom",
	"editor.lightbulb.enabled": "on",
	"bladeFormatter.format.wrapLineLength": 90,
	"bladeFormatter.format.indentInnerHtml": true,
	"bladeFormatter.format.indentSize": 2,
	"window.commandCenter": false
}
